---
import { classBtn } from "@/const";
import { createSlug } from "@/lib/slug";
import type { Anime } from "@/types/api";

interface RecommendationEntry {
  mal_id: string;
  entry: Array<{
    mal_id: number;
    url: string;
    images: {
      jpg: {
        image_url: string;
        small_image_url: string;
        large_image_url: string;
      };
      webp?: {
        image_url: string;
        large_image_url: string;
      };
    };
    title: string;
  }>;
  content: string;
  votes: number;
  user: {
    url: string;
    username: string;
  };
}

interface Props {
  anime: Anime | RecommendationEntry;
}

const { anime } = Astro.props;

// Determinar si es una recomendación o un anime normal
const isRecommendation = "entry" in anime;
const animeData = isRecommendation ? anime.entry[0] : anime;

// Verificar si tiene imagen
const hasImage = animeData?.images?.jpg?.large_image_url;

// Preparar el texto del score según el tipo de dato

const displayScore = isRecommendation
  ? `${anime.votes} votes`
  : (animeData as Anime).score?.toFixed(1) || "N/A";

// slug para la card anime
const animeId = animeData.mal_id;
---

{
  hasImage && (
    <article class="bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl hover:shadow-primary/15 transition-all duration-300 flex flex-col group card-hover">
      {/* Contenedor de imagen con efecto zoom */}
      <div class="relative overflow-hidden h-64 shrink-0 image-zoom">
        <img
          src={animeData.images.jpg.large_image_url}
          alt={animeData.title}
          class="w-full h-full object-cover"
          loading="lazy"
          decoding="async"
        />
        {/* Overlay gradiente al hacer hover */}
        <div class="absolute inset-0 bg-linear-to-t from-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
        {/* Badge con la puntuación */}
        <div class="absolute top-3 right-3 bg-primary/90 backdrop-blur-sm text-bg px-3 py-1.5 rounded-full text-xs font-bold flex items-center gap-1 shadow-lg">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-3.5 w-3.5 text-yellow-400"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
          </svg>
          {displayScore}
        </div>
      </div>

      {/* Contenido de la tarjeta */}
      <div class="p-5 flex flex-col flex-1">
        <h3 class="font-bold text-base line-clamp-2 mb-3 leading-snug min-h-10 group-hover:text-primary/80 transition-colors">
          {animeData.title}
        </h3>

        {/* Sinopsis (solo para animes normales) */}
        {!isRecommendation && (animeData as Anime).synopsis && (
          <p class="text-sm text-gray-600 line-clamp-2 mb-4 min-h-10 leading-relaxed">
            {(animeData as Anime).synopsis || ""}
          </p>
        )}

        {/* Metadata (tipo y episodios) */}
        {!isRecommendation && (
          <div class="flex justify-between items-center text-xs text-gray-500 mt-auto pt-3 border-t border-gray-100">
            <span class="flex items-center gap-1">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-3.5 w-3.5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"
                />
              </svg>
              {(animeData as Anime).type}
            </span>
            <div class="flex gap-3">
              <span class="flex items-center gap-1">
                {(animeData as Anime).episodes ? (
                  <>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-3.5 w-3.5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
                      />
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    </svg>
                    {(animeData as Anime).episodes} eps
                  </>
                ) : (
                  <span class="text-gray-400">Ongoing</span>
                )}
              </span>
              <a href={`anime/${animeId}`} class={classBtn}>
                Info
              </a>
            </div>
          </div>
        )}
      </div>
    </article>
  )
}
