---
import { fetchRecentEpisodes, fetchPopularEpisodes } from "@/lib/api";

// Obtener datos de episodios al renderizar el componente
const recentEpisodes = await fetchRecentEpisodes();
const popularEpisodes = await fetchPopularEpisodes();
---

<section class="my-12 space-y-8 md:flex gap-6">
  {/* Sección de episodios recientes */}
  <div class="h-[40vh] flex flex-col">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-bold text-primary flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Recent Episodes
      </h2>
      <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full">
        {recentEpisodes.data?.length || 0} series
      </span>
    </div>
    <div
      class="flex-1 overflow-y-auto pb-2 scrollbar-thin scrollbar-thumb-gray-300 scrollbar-track-transparent"
    >
      {
        recentEpisodes.data && recentEpisodes.data.length > 0 ? (
          <div class="space-y-6">
            {recentEpisodes.data.map((item) => (
              <div class="episode-group">
                {/* Título del anime */}
                <h3 class="text-base font-semibold mb-3 text-primary/90 flex items-center gap-2">
                  <span class="w-2 h-2 bg-primary rounded-full" />
                  {item.entry.title}
                </h3>
                {/* Grid de episodios */}
                <div class="grid grid-cols-3 gap-3">
                  {item.episodes.map((episode) => (
                    <article class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-lg hover:shadow-primary/10 transition-all duration-300 flex flex-col group">
                      <div class="relative overflow-hidden aspect-4/3">
                        <img
                          src={item.entry.images.webp.image_url}
                          alt={episode.title}
                          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                          loading="lazy"
                        />
                        {/* Badge premium */}
                        {episode.premium && (
                          <div class="absolute top-1.5 right-1.5 bg-linear-to-r from-yellow-400 to-yellow-600 text-white px-2 py-0.5 rounded-md text-[10px] font-bold shadow-md">
                            PREMIUM
                          </div>
                        )}
                        {/* Overlay con botón de play al hacer hover */}
                        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors duration-300 flex items-center justify-center">
                          <div class="w-10 h-10 bg-white/90 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transform scale-50 group-hover:scale-100 transition-all duration-300">
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              class="h-5 w-5 text-primary ml-0.5"
                              fill="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path d="M8 5v14l11-7z" />
                            </svg>
                          </div>
                        </div>
                      </div>
                      <div class="p-3 flex-1 flex flex-col">
                        <h4 class="font-medium text-xs line-clamp-2 text-gray-800 leading-relaxed">
                          {episode.title}
                        </h4>
                      </div>
                    </article>
                  ))}
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="flex items-center justify-center h-full">
            <p class="text-center text-gray-500 text-sm bg-gray-50 px-6 py-3 rounded-full">
              No recent episodes available
            </p>
          </div>
        )
      }
    </div>
  </div>

  {/* Sección de episodios populares */}
  <div class="h-[40vh] flex flex-col">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-bold text-primary flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
          ></path>
        </svg>
        Popular Episodes
      </h2>
      <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full">
        {popularEpisodes.data?.length || 0} series
      </span>
    </div>
    <div
      class="flex-1 overflow-y-auto pb-2 scrollbar-thin scrollbar-thumb-gray-300 scrollbar-track-transparent"
