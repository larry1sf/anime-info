                  <span class="w-2 h-2 bg-primary rounded-full" />
                  {item.entry.title}
                </h3>
                {/* Grid de episodios */}
                <div class="grid grid-cols-3 gap-3">
                  {item.episodes.map((episode) => (
                    <article class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-lg hover:shadow-primary/10 transition-all duration-300 flex flex-col group">
                      <div class="relative overflow-hidden aspect-[4/3]">
                        <img
                          src={item.entry.images.webp.image_url}
                          alt={episode.title}
                          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                          loading="lazy"
                        />
                        {/* Badge premium */}
                        {episode.premium && (
                          <div class="absolute top-1.5 right-1.5 bg-gradient-to-r from-yellow-400 to-yellow-600 text-white px-2 py-0.5 rounded-md text-[10px] font-bold shadow-md">
                            PREMIUM
                          </div>
