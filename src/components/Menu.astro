---
// Definición de opciones de navegación con iconos SVG
const optionsButtons: { label: string; slug: string; icon: string }[] = [
  { label: "home", slug: "/", icon: "M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" },
  { label: "anime", slug: "/anime", icon: "M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" },
  { label: "manga", slug: "/manga", icon: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" },
  { label: "characters", slug: "/character", icon: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" },
  { label: "top", slug: "/top", icon: "M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" },
];

// Obtener la ruta actual para resaltar el enlace activo
const path = Astro.url.pathname;
---

<section class="my-6">
  <nav
    class="flex justify-evenly items-center my-6 py-3 mx-auto bg-primary rounded-full text-bg max-w-3xl shadow-lg shadow-primary/20"
  >
    {
      optionsButtons.map(({ label, slug, icon }) => {
        const isActive = slug === path;
        return (
          <a
            href={slug}
            class:list={[
              "px-4 py-2 rounded-full transition-all duration-300 capitalize flex items-center gap-2 text-sm font-medium",
              isActive 
                ? "bg-white text-primary scale-105 shadow-md" 
                : "hover:contrast-90 hover:scale-105 hover:bg-white/10",
            ]}
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d={icon} />
            </svg>
            {label}
          </a>
        );
      })
    }
  </nav>

  <p class="text-center text-secondary text-sm">
    Discover and explore your favorite anime and manga series!
  </p>
</section>
