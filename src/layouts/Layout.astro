---
import "@/styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Discover and explore your favorite anime and manga series with Anime Info" />
    <title>Anime Info | {title}</title>
    
    {/* Preconnect para mejor rendimiento al cargar datos de la API */}
    <link rel="preconnect" href="https://api.jikan.moe" />
  </head>

  <body class="bg-bg text-primary antialiased min-h-screen">
    <main class="py-8 px-4 max-w-5xl mx-auto">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  /* Mejoras tipogr치ficas base */
  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
    color-scheme: light;
  }

  /* Estilo para selecci칩n de texto */
  ::selection {
    background-color: rgba(28, 28, 28, 0.2);
    color: inherit;
  }

  /* Estilos de foco para accesibilidad */
  *:focus-visible {
    outline: 2px solid #1c1c1c;
    outline-offset: 2px;
  }

  /* Animaci칩n suave al cargar im치genes */
  img {
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  img[data-loading="true"] {
    opacity: 0;
  }

  /* Mejoras en enlaces */
  a {
    transition: color 0.2s ease, text-decoration-color 0.2s ease;
  }
</style>
